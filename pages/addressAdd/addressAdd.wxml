<view id="addressAdd">
  <view class="addressAdd-title">
    <text>添加收货地址</text>
    <text class="save" bindtap='addressSave'>保存</text>
  </view>
  <view class="section-input">
    <picker mode="region" bindchange="bindRegionChange" value="{{region}}" custom-item="{{customItem}}">
      <view class="picker">
        <text>地区:</text>  
        <input value='{{region}}' placeholder='请选择地区' placeholder-style='color:#333'></input>
      </view>
    </picker>
    <view class="detail-address">
      <text>详细地址:</text>
      <input type='text' placeholder='请输入详细地址' placeholder-style='color:#333' bindinput='detailAddress'></input>
    </view>
    <view class="connect-people">
      <text>联系人:</text>
      <input type='text' placeholder='联系人' placeholder-style='color:#333' bindinput='connectPeople'></input>
    </view>
    <view class="phone"> 
      <text>手机号:</text>
      <input type='text' placeholder='请输入手机号' placeholder-style='color:#333' bindinput='phone'></input>
    </view>
  </view>
</view>