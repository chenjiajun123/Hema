#shoplist{
  height: 100%;
  
}
.shoplist-title {
  padding: 30rpx;
  background-coloR: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 32rpx;
  position: relative;
  border: solid 1rpx #ccc;
}
.shoplist-title image { 
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  right: 20rpx;
}

.shoplist-content .list {
  margin: 30rpx;
  border-top: solid 1rpx #ccc;
  border-bottom: solid 1rpx #ccc;
  display: flex;
  padding: 20rpx 0;
  position: relative;
}

.shoplist-content .list .left-pic image {
  width: 200rpx;
  height: 200rpx;
  vertical-align: middle;
}

.shoplist-content .list .right-content {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.shoplist-content .list .right-content .title {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  font-size: 36rpx;
}

.shoplist-content .list .right-content .price {
  display: block;
  font-size: 36rpx;
  color: #ff3e02;
}

.shoplist-content .list .right-content .price .add {
  color: #25a4ff;
  position: absolute;
  right: 0;
}
